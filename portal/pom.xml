    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <finalName>portal</finalName>
                <plugins>
                    <!--ant run 插件-->
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>ant-copy</id>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <target>

                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!--compiler 插件-->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.2</version>
                        <configuration>
                            <encoding>UTF-8</encoding>
                            <source>1.7</source>
                            <target>1.7</target>
                            <compilerArgument>-Xlint:deprecation</compilerArgument>
                        </configuration>
                    </plugin>
                    <!--key tool插件-->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>keytool-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <id>clean</id>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                            </execution>
                            <execution>
                                <phase>generate-resources</phase>
                                <id>generateKeyPair</id>
                                <goals>
                                    <goal>generateKeyPair</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <keystore>${project.build.directory}/portal-ssl.keystore</keystore>
                            <dname>cn=localhost</dname>
                            <keypass>portal</keypass>
                            <storepass>portal</storepass>
                            <alias>portal</alias>
                            <keyalg>RSA</keyalg>
                        </configuration>
                    </plugin>
                    <!--jetty插件-->
                    <plugin>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <version>${jetty.version}</version>
                        <configuration>
                            <systemProperties>
                                <systemProperty>
                                    <name>spring.profiles.active</name>
                                    <value>development</value>
                                </systemProperty>
                            </systemProperties>
                            <useTestClasspath>true</useTestClasspath>
                            <webAppConfig>
                                <contextPath>/${project.artifactId}</contextPath>
                                <defaultsDescriptor>${project.build.sourceDirectory}/webdefault.xml</defaultsDescriptor>
                            </webAppConfig>
                            <connectors>
                                <connector implementation="org.eclipse.jetty.server.bio.SocketConnector">
                                    <port>9090</port>
                                </connector>
                                <connector implementation="org.eclipse.jetty.server.ssl.SslSocketConnector">
                                    <port>8443</port>
                                    <maxIdleTime>60000</maxIdleTime>
                                    <password>portal</password>
                                    <keyPassword>portal</keyPassword>
                                    <keystore>${project.build.directory}/portal-ssl.keystore</keystore>
                                </connector>
                            </connectors>
                            <requestLog implementation="org.eclipse.jetty.server.NCSARequestLog">
                                <filename>target/yyyy_mm_dd.request.log</filename>
                                <retainDays>90</retainDays>
                                <append>true</append>
                                <extended>false</extended>
                            </requestLog>
                            <stopPort>8071</stopPort>
                            <stopKey>foo</stopKey>
                        </configuration>
                    </plugin>
                </plugins>

            </build>
        </profile>
